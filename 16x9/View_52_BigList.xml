<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<includes>
	<include name="View_52_BigList">
		<include>View_52_BigList_SinglePane</include>
	</include>
	<include name="View_52_BigList_SinglePane">
		<description>List View (id=52)</description>
		<control type="group">
			<include>Animation.Common</include>
			<visible>Control.IsVisible(52)</visible>
			<visible>!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogAlbumInfo.xml)</visible>
			<control type="list" id="52">
				<top>PosterPad</top>
				<left>180</left>
				<width>1570</width>
				<height>650</height>
				<onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
				<onright>60</onright>
				<ondown>52</ondown>
				<onup>52</onup>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<orientation>vertical</orientation>
				<viewtype label="537">list</viewtype>
				<scrolltime tween="quadratic">400</scrolltime>
				<itemlayout height="130" width="1570">
					<include>View_52_BigList_ItemLayout</include>
				</itemlayout>
				<focusedlayout height="130" width="1570">
					<include>View_52_BigList_FocusLayout</include>
				</focusedlayout>
			</control>
			<control type="group">
				<animation effect="slide" start="-100" end="-100" condition="true">Conditional</animation>
				<include>Furniture_Scrollbar</include>
			</control>
		</control>
	</include>
	<include name="View_52_BigList_DoublePane">
		<description>List View (id=52)</description>
		<control type="group">
			<include>Animation.Common</include>
			<visible>Control.IsVisible(52)</visible>
			<visible>!Window.IsVisible(DialogVideoInfo.xml) + !Window.IsVisible(DialogAlbumInfo.xml)</visible>
			<control type="panel" id="52">
				<top>PosterPad</top>
				<left>SidePad</left>
				<width>1770</width>
				<height>650</height>
				<onleft condition="!Skin.HasSetting(global.kioskmode)">9000</onleft>
				<onright>60</onright>
				<ondown>52</ondown>
				<onup>52</onup>
				<preloaditems>2</preloaditems>
				<pagecontrol>60</pagecontrol>
				<orientation>vertical</orientation>
				<viewtype label="537">list</viewtype>
				<scrolltime tween="quadratic">400</scrolltime>
				<itemlayout height="130" width="885">
					<control type="image">
						<left>0</left>
						<right>10</right>
						<height>120</height>
						<texture border="5" colordiffuse="Dark4">common/box.png</texture>
					</control>
					<include>View_52_BigList_ItemLayout</include>
				</itemlayout>
				<focusedlayout height="130" width="885">
					<include>View_52_BigList_FocusLayout</include>
				</focusedlayout>
			</control>
			<control type="group">
				<include>Furniture_Scrollbar</include>
			</control>
		</control>
	</include>
	<include name="View_52_BigList_ItemLayout">
		<control type="image">
			<left>10</left>
			<top>10</top>
			<width>100</width>
			<height>100</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<texture diffuse="common/circle.png" background="true">$INFO[ListItem.Icon]</texture>
			<visible>!Skin.HasSetting(global.hidecirles)</visible>
		</control>
		<control type="image">
			<left>10</left>
			<top>10</top>
			<width>100</width>
			<height>100</height>
			<aspectratio scalediffuse="false">keep</aspectratio>
			<texture background="true">$INFO[ListItem.Icon]</texture>
			<visible>Skin.HasSetting(global.hidecirles)</visible>
		</control>
		<control type="label">
			<left>130</left>
			<top>10</top>
			<right>40</right>
			<height>100</height>
			<aligny>center</aligny>
			<font>SmallBold</font>
			<textcolor>Dark1</textcolor>
			<label>$INFO[ListItem.Label]</label>
		</control>
		<control type="label">
			<left>130</left>
			<top>10</top>
			<right>100</right>
			<align>right</align>
			<height>100</height>
			<aligny>center</aligny>
			<font>Small</font>
			<textcolor>Dark1</textcolor>
			<label>$INFO[ListItem.Label2]</label>
		</control>
		<control type="image">
			<centerright>58</centerright>
			<centertop>60</centertop>
			<width>40</width>
			<height>40</height>
			<aspectratio aligny="top">keep</aspectratio>
			<texture colordiffuse="$VAR[PercentColourHighlight]">$VAR[PercentWatchedBacking]</texture>
			<visible>!IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
		</control>
		<control type="image">
			<centerright>58</centerright>
			<centertop>60</centertop>
			<width>40</width>
			<height>40</height>
			<aspectratio aligny="top">keep</aspectratio>
			<texture>$VAR[PercentWatched]</texture>
			<visible>!stringcompare(ListItem.Label,..)</visible>
		</control>
		<control type="group">
			<visible>IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
			<control type="image">
				<centerright>58</centerright>
				<centertop>60</centertop>
				<height>40</height>
				<width>40</width>
				<texture colordiffuse="EmbyGreen">common/circle.png</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>
			<control type="label">
				<centerright>58</centerright>
				<centertop>60</centertop>
				<height>40</height>
				<width>40</width>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
				<font>Tiny</font>
				<scroll>false</scroll>
				<textcolor>White</textcolor>
			</control>
		</control>
	</include>
	<include name="View_52_BigList_FocusLayout">
		<control type="button">
			<texturefocus>-</texturefocus>
			<texturenofocus>-</texturenofocus>
			<onfocus condition="Container.Content(movies)">ClearProperty(TVShowID,home)</onfocus>
			<onfocus condition="Container.Content(tvshows)">SetProperty(TVShowID,$INFO[ListItem.DBID],home)</onfocus>
		</control>
		<control type="image">
			<left>0</left>
			<right>10</right>
			<height>120</height>
			<texture border="5" colordiffuse="Dark1">common/box.png</texture>
			<bordertexture colordiffuse="$VAR[ColourHighlight]">common/white.png</bordertexture>
			<bordersize>6,0,0,0</bordersize>
		</control>
		<control type="image">
			<right>10</right>
			<height>120</height>
			<left>6</left>
			<width>1</width>
			<texture colordiffuse="Light1">common/white.png</texture>
		</control>
		<control type="image">
			<left>10</left>
			<top>10</top>
			<width>100</width>
			<height>100</height>
			<aspectratio scalediffuse="false">scale</aspectratio>
			<texture diffuse="common/circle.png" background="true">$INFO[ListItem.Icon]</texture>
			<visible>!Skin.HasSetting(global.hidecirles)</visible>
		</control>
		<control type="image">
			<left>10</left>
			<top>10</top>
			<width>100</width>
			<height>100</height>
			<aspectratio scalediffuse="false">keep</aspectratio>
			<texture background="true">$INFO[ListItem.Icon]</texture>
			<visible>Skin.HasSetting(global.hidecirles)</visible>
		</control>
		<control type="label">
			<left>130</left>
			<top>10</top>
			<right>40</right>
			<height>100</height>
			<aligny>center</aligny>
			<font>SmallBold</font>
			<textcolor>Light1</textcolor>
			<label>$INFO[ListItem.Label]</label>
		</control>
		<control type="label">
			<left>130</left>
			<top>10</top>
			<right>100</right>
			<align>right</align>
			<height>100</height>
			<aligny>center</aligny>
			<font>Small</font>
			<textcolor>Light1</textcolor>
			<label>$INFO[ListItem.Label2]</label>
		</control>
		<control type="image">
			<centerright>58</centerright>
			<centertop>60</centertop>
			<width>40</width>
			<height>40</height>
			<aspectratio aligny="top">keep</aspectratio>
			<texture colordiffuse="$VAR[PercentColourHighlight]">$VAR[PercentWatchedBacking]</texture>
			<visible>!IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
		</control>
		<control type="image">
			<centerright>58</centerright>
			<centertop>60</centertop>
			<width>40</width>
			<height>40</height>
			<aspectratio aligny="top">keep</aspectratio>
			<texture>$VAR[PercentWatched]</texture>
			<visible>!stringcompare(ListItem.Label,..)</visible>
		</control>
		<control type="group">
			<visible>IntegerGreaterThan(ListItem.Property(UnwatchedEpisodes),0)</visible>
			<control type="image">
				<centerright>58</centerright>
				<centertop>60</centertop>
				<height>40</height>
				<width>40</width>
				<texture colordiffuse="EmbyGreen">common/circle.png</texture>
				<aspectratio align="center" aligny="center">keep</aspectratio>
			</control>
			<control type="label">
				<centerright>58</centerright>
				<centertop>60</centertop>
				<height>40</height>
				<width>40</width>
				<align>center</align>
				<aligny>center</aligny>
				<label>$INFO[ListItem.Property(UnwatchedEpisodes)]</label>
				<font>Tiny</font>
				<scroll>false</scroll>
				<textcolor>White</textcolor>
			</control>
		</control>
	</include>
</includes>